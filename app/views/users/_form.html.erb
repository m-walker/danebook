<h1>Sign Up</h1>
<%= form_for @user do |user_fields| %>
  <div class="row">
    <div class="form-group col-sm-6">
      <%= user_fields.label :first_name, class: "sr-only" %>
      <%= field_with_errors(@user, :first_name) %>
      <%= user_fields.text_field :first_name, class: 'form-control', placeholder: 'First name' %>
    </div>
    <div class="form-group col-sm-6">
      <%= user_fields.label :last_name, class: "sr-only" %>
      <%= field_with_errors(@user, :last_name) %>
      <%= user_fields.text_field :last_name, class: 'form-control', placeholder: 'Last name' %>
    </div>
  </div>
  <div class="form-group">
    <%= user_fields.label :email, class: "sr-only" %>
    <%= field_with_errors(@user, :email) %>
    <%= user_fields.text_field :email, class: 'form-control', placeholder: 'Your email' %>
  </div>
  <div class="form-group">
    <%= user_fields.label :password, class: "sr-only" %>
    <%= field_with_errors(@user, :password) %>
    <%= user_fields.password_field :password, class: 'form-control', placeholder: 'Your new password' %>
  </div>
  <div class="form-group">
    <%= user_fields.label :password_confirmation, class: "sr-only" %>
    <%= field_with_errors(@user, :password_confirmation) %>
    <%= user_fields.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm your password' %>
  </div>
  <%= user_fields.fields_for :profile do |profile_fields| %>
    <div class="form-group">
      <%= profile_fields.label :dob, 'Birthday' %><br>
      <%= field_with_errors(profile_fields.object, :dob) %>
      <%= profile_fields.date_select :dob, {prompt: true, start_year: Date.today.year - 18, end_year: Date.today.year - 120, order: [:month, :day, :year]}, {class: 'form-control'} %>
    </div>

    <div class="form-group">
      <%= field_with_errors(profile_fields.object, :gender) %>
      <%= profile_fields.label :gender, class: 'radio-inline' do %>
        <%= profile_fields.radio_button :gender, 'female' %>
        Female
      <% end %>
      <%= profile_fields.label :gender, class: 'radio-inline' do %>
        <%= profile_fields.radio_button :gender, 'male' %>
        Male
      <% end %>
      <%= profile_fields.label :gender, class: 'radio-inline' do %>
        <%= profile_fields.radio_button :gender, 'other' %>
        Other
      <% end %>
    </div>
  <% end %>

  <%= user_fields.submit 'Sign up!', class: "btn btn-success btn-block btn-lg" %>
<% end %>