<%= image_tag @photo.photo.url(:timeline), class: 'img-responsive' %>

<% if @user == current_user %>
  <div class="text-right">
    <%# TODO: Is this kosher? (links faking forms) %>
    <%= link_to 'Set as profile photo', user_path(@user, user: {profile_photo_id: @photo.id}), method: :patch %><br>
    <%= link_to 'Set as cover photo', user_path(@user, user: {cover_photo_id: @photo.id}), method: :patch %><br>
    <%= link_to fa_icon('trash', text: 'Delete photo'), user_photo_path(@user, @photo), method: :delete, data: {confirm: 'Are you sure you want to delete this photo?'} %>
  </div>
<% end %>