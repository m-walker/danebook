<%= render 'layouts/header' %>

<!-- The main information pane contains basic information, contact information, words to live by and a short description about me -->
<main class="row">

  <!-- Left column of timeline -->
  <section class="col-sm-5">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="text-center timeline-panel-heading">
          About
        </h4>
      </div>
      <div class="panel-body">
        <%= render 'profiles/basic_info' %>
      </div> <!-- panel-body -->
    </div> <!-- panel -->

    <%= render 'photos' %>
    <%= render 'friends' %>
  </section>


  <!-- Right column of timeline -->
  <section class="col-sm-7">
    <%= render 'form' if @user == current_user %>

    <%= render @posts %>

    <div class="panel panel-default">
      <div class="panel-body">

        <div class="row">
          <div class="col-sm-2">
            <img src="http://placehold.it/80x80" class="img-thumbnail">
          </div>
          <div class="col-sm-10">
            <h4><a href="#">Athena Goddess of War</a></h4>
            <small class="text-muted">Posted on Wednesday, October 20, 2015</small>
          </div>
        </div>

        <div class="row post">
          <div class="col-sm-12">
            <p>Who Dat!!</p>
          </div>
        </div>

      </div> <!-- panel-body -->
      <div class="panel-footer post-footer">
        <div class="row post-actions">
          <div class="col-sm-12">

            <a href="#" class="post-action"><i class="fa fa-thumbs-up"></i> Like</a>
            <a href="#" class="post-action"><i class="fa fa-comment"></i> Comment</a>
            <a href="#" class="pull-right post-action"><i class="fa fa-trash"></i> Delete</a>

            <p>You and <a href="#">Artemis Goddess of the Hunt</a> and 3 others like this.</p>

          </div>
        </div>

        <article class="comment">
          <div class="row">
            <div class="col-sm-2">
              <img src="http://placehold.it/80x80" class="img-thumbnail">
            </div>
            <div class="col-sm-10">
              <h4><a href="#">Ares God of War</a> <small class="text-muted">Said on Wednesday, October 20, 2015</small></h4>
              <p>Yeah you right!</p>
              <p>
                <a href="#" class="post-action"><i class="fa fa-thumbs-up"></i> Like</a> <small class="text-muted">You and 3 other people like this.</small></h4>
              </p>
            </div>
          </div>
        </article>

        <article class="comment">
          <div class="row">
            <div class="col-sm-2">
              <img src="http://placehold.it/80x80" class="img-thumbnail">
            </div>
            <div class="col-sm-10">
              <h4><a href="#">Athena Goddess of War</a> <small class="text-muted">Said on Wednesday, October 20, 2015</small></h4>
              <p>Bout that NOLA life!</p>
              <p>
                <a href="#" class="post-action"><i class="fa fa-thumbs-up"></i> Like</a> <small class="text-muted">3 other people like this.</small></h4>
                <a href="#" class="pull-right post-action"><i class="fa fa-trash"></i> Delete</a>
              </p>
            </div>
          </div>
        </article>

        <form>
          <div class="form-group">
            <label class="sr-only">Comment</label>
            <textarea class="form-control" placeholder="Write a comment..." rows=3></textarea>
          </div>
          <p>
            <a href="#">Cancel</a>
            <button type="submit" class="btn btn-primary btn-sm pull-right">Comment</button>
          </p>
        </form>

      </div> <!-- panel footer -->
    </div> <!-- panel -->
  </section>
</main>