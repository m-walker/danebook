<%= form_tag(users_path, method: :get, role: "search", class: "navbar-form") do %>
  <div class="form-group col-sm-6">
    <%= label_tag :search, nil, class: "sr-only" %>
    <%= text_field_tag :search, nil, class: "form-control", placeholder: 'Search for Users', id: "user-search" %>
